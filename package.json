{
  "name": "kyle",
  "description": "A simple Storyboard app",
  "version": "0.0.6",
  "private": true,
  "type": "module",
  "author": {
    "email": "hello@decentparadox.me",
    "name": "decentparadox",
    "url": "https://decentparadox.me"
  },
  "main": "packages/entry-point.mjs",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -ws --if-present",
    "compile": "npm run build && electron-builder build --config electron-builder.mjs",
    "test": "npx playwright test ./tests/e2e.spec.ts",
    "start": "node packages/dev-mode.js",
    "typecheck": "npm run typecheck -ws --if-present",
    "create-renderer": "cd packages && npm create vite@latest renderer",
    "integrate-renderer": "npm start --workspace @app/integrate-renderer",
    "init": "npm run create-renderer && npm run integrate-renderer && npm install",
    "package": "npm run build && electron-builder build --mac --win --publish never --config electron-builder.mjs"
  },
  "devDependencies": {
    "@npmcli/map-workspaces": "4.0.2",
    "@playwright/test": "1.52.0",
    "@types/node": "22.15.17",
    "electron": "36.1.0",
    "electron-builder": "26.0.12",
    "glob": "11.0.2",
    "playwright": "^1.52.0"
  },
  "dependencies": {
    "@app/main": "*",
    "@radix-ui/react-dialog": "^1.1.13",
    "@radix-ui/react-dropdown-menu": "^2.1.14",
    "@radix-ui/react-select": "^2.2.4",
    "@radix-ui/react-switch": "^1.2.4",
    "clsx": "^2.1.1",
    "lodash": "^4.17.21",
    "motion": "^12.10.5",
    "tailwind-merge": "^3.2.0"
  }
}
